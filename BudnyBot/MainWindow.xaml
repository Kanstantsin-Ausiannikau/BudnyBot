<Window x:Class="BudnyBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudnyBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="880">
    <Grid Height="500" Width="850">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="737*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtStartUrl" HorizontalAlignment="Left" Height="23" Margin="56.75,10,0,0" TextWrapping="Wrap" Text="http://budny.by/abiturient/ssuzspravochnik" VerticalAlignment="Top" Width="673" Grid.Column="1"/>
        <Label Content="Начальный url" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSearch" Content="Поиск" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" Grid.Column="1" Click="btnSearch_Click"/>
        <TreeView x:Name="treeMain" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="436" Margin="10,54,0,0" VerticalAlignment="Bottom" Width="604"/>

    </Grid>
</Window>
